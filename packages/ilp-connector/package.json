{
  "name": "ilp-connector",
  "version": "12.3.0",
  "description": "ILP connector reference implementation",
  "repository": {
    "type": "git",
    "url": "git@github.com:interledgerjs/ilp-connector.git"
  },
  "keywords": [
    "interledger",
    "five-bells",
    "payments"
  ],
  "author": "Ripple <info@ripple.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/interledgerjs/ilp-connector/issues"
  },
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start-prof": "node --prof --logfile=${CONNECTOR_V8_LOGFILE:-v8.log} src/index.js",
    "start:watch": "nodemon src/index.js",
    "lint": "eslint .",
    "test": "istanbul test -- _mocha",
    "report-coverage": "codecov",
    "integration": "integration-loader && integration all",
    "bump": "version-bump"
  },
  "engines": {
    "node": ">=6.6.0"
  },
  "dependencies": {
    "bignumber.js": "^2.0.7",
    "co": "^4.1.0",
    "co-defer": "^1.0.0",
    "co-request": "^1.0.0",
    "eventemitter2": "^1.0.3",
    "five-bells-shared": "^19.0.0",
    "ilp-core": "~9.0.0",
    "ilp-plugin-bells": "^9.0.0",
    "ilp-plugin-virtual": "^5.0.0",
    "ilp-routing": "~5.0.0",
    "lodash": "^4.6.1",
    "moment": "^2.10.2",
    "riverpig": "^1.1.0",
    "sqlite3": "^3.1.4",
    "through2": "^2.0.1"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "co-mocha": "^1.1.0",
    "codecov": "^1.0.1",
    "eslint": "^2.5.1",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "five-bells-integration-test-loader": "^1.0.0",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.2",
    "mock-require": "^1.3.0",
    "mock-socket": "^2.0.0",
    "nock": "^2.10.0",
    "nodemon": "^1.8.1",
    "sinon": "^1.14.1",
    "spec-xunit-file": "0.0.1-3"
  },
  "config": {
    "five-bells-integration-test-loader": {
      "module": "five-bells-integration-test",
      "repo": "interledgerjs/five-bells-integration-test"
    }
  }
}
