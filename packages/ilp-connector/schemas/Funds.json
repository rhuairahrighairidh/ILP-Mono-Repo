{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Funds",
  "description": "A defined quantity of an asset optionally located on a specified ledger.",
  "type": "object",
  "properties": {
    "account": {
      "description": "Account holding the funds",
      "$ref": "Identifier.json"
    },
    "amount": {
      "description": "Amount as decimal",
      "$ref": "Amount.json"
    },
    "asset": {
      "description": "Asset type, may be any string such as 'USD' or an IRI",
      "type": "string",
      "maxLength": "4096",
      "default": "[account's asset type]"
    },
    "ledger": {
      "description": "Ledger where this transfer has taken place",
      "$ref": "Identifier.json",
      "default": "[host ledger]"
    }
  },
  "required": ["account", "amount"]
}
