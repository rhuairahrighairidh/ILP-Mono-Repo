{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Transfer",
  "description": "A ledger-local transfer of funds",
  "type": "object",
  "properties": {
    "id": {
      "description": "Resource identifier",
      "$ref": "Iri.json"
    },
    "source_funds": {
      "description": "Funds that go into the transfer",
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "SourceFunds.json" }
    },
    "destination_funds": {
      "description": "Funds that come out of the transfer",
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "DestinationFunds.json" }
    }
  },
  "required": ["source_funds", "destination_funds"]
}
