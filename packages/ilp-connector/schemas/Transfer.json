{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Transfer",
  "description": "A ledger-local transfer of funds",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique ID",
      "$ref": "Uuid.json"
    },
    "source": {
      "description": "Sender identifier",
      "$ref": "Funds.json"
    },
    "destination": {
      "description": "Recipient identifier",
      "$ref": "Funds.json"
    }
  },
  "required": ["source", "destination"]
}
