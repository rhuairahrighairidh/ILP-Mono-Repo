{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Settlement",
  "description": "A cross-ledger transfer",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique ID",
      "$ref": "Iri.json"
    },
    "source_transfer": {
      "description": "Transfer on the source ledger",
      "$ref": "Transfer.json"
    },
    "destination_transfer": {
      "description": "Transfer on the destination ledger",
      "$ref": "Transfer.json"
    }
  },
  "required": ["source_transfer", "destination_transfer"]
}
