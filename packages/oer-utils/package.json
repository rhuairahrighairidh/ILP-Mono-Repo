{
  "name": "oer-utils",
  "version": "4.0.0",
  "description": "Tools for OER parsing and serialization",
  "main": "dist/src/index.js",
  "typings": "dist/src/index",
  "directories": {
    "test": "test"
  },
  "files": [
    "index.js",
    "reader.js",
    "writer.js",
    "predictor.js",
    "dist/src"
  ],
  "scripts": {
    "lint": "tslint \"src/**/*.ts\" \"test/*.spec.ts\"",
    "build": "rm -rf dist ; tsc",
    "test": "npm run build && npm run test:specs",
    "test:specs": "mocha",
    "precover": "rm -rf .nyc_output",
    "cover": "nyc --extension .ts --reporter=text-summary --reporter=html mocha",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/interledgerjs/oer-utils.git"
  },
  "keywords": [
    "canonical",
    "oer",
    "parsing",
    "binary",
    "buffer",
    "serialization",
    "deserialization",
    "asn1",
    "format"
  ],
  "author": "Interledger Team <info@interledger.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/interledgerjs/oer-utils/issues"
  },
  "homepage": "https://github.com/interledgerjs/oer-utils",
  "dependencies": {
    "bignumber.js": "^7.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.3"
  }
}
