{
  "name": "oer-utils",
  "version": "1.3.0",
  "description": "Tools for OER parsing and serialization",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "index.js",
    "reader.js",
    "writer.js",
    "predictor.js",
    "dist"
  ],
  "scripts": {
    "lint": "tslint \"src/**/*.ts\" \"test/*.spec.ts\"",
    "postinstall": "typings install",
    "build": "rm -rf dist ; tsc",
    "test": "npm run build && npm run test:specs",
    "test:specs": "mocha",
    "precover": "rm -rf .nyc_output",
    "cover": "nyc --extension .ts --reporter=text-summary --reporter=html mocha",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/interledgerjs/oer-utils.git"
  },
  "keywords": [
    "canonical",
    "oer",
    "parsing",
    "binary",
    "buffer",
    "serialization",
    "deserialization",
    "asn1",
    "format"
  ],
  "author": "Interledger Team <info@interledger.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/interledgerjs/oer-utils/issues"
  },
  "homepage": "https://github.com/interledgerjs/oer-utils",
  "dependencies": {
    "core-js": "^2.4.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "mocha": "^3.0.1",
    "nyc": "^8.1.0",
    "ts-node": "^1.3.0",
    "tslint": "^3.15.1",
    "tslint-config-standard": "^1.3.0",
    "typescript": "^2.0.0",
    "typings": "^1.3.3"
  }
}
