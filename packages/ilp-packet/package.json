{
  "name": "ilp-packet",
  "version": "2.1.2",
  "description": "Module for parsing and serializing ILP packets",
  "main": "dist/index.js",
  "typings": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "tslint \"src/**/*.ts\" \"test/*.spec.ts\"",
    "build": "rm -rf dist ; tsc",
    "test": "npm run build && npm run test:specs",
    "test:specs": "mocha",
    "precover": "rm -rf .nyc_output",
    "cover": "nyc --extension .ts --reporter=text-summary --reporter=html mocha",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/ilp-packet.git"
  },
  "keywords": [
    "ilp",
    "interledger",
    "packet",
    "binary",
    "serialization",
    "format",
    "convert"
  ],
  "author": "Interledger Team <info@interledger.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/interledgerjs/ilp-packet/issues"
  },
  "homepage": "https://github.com/interledgerjs/ilp-packet#readme",
  "devDependencies": {
    "@types/bignumber.js": "^4.0.2",
    "@types/chai": "^4.0.1",
    "@types/long": "^3.0.31",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.12",
    "chai": "^4.1.0",
    "codecov": "^3.0.0",
    "mocha": "^4.0.1",
    "nyc": "^11.0.3",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "bignumber.js": "^5.0.0",
    "long": "^3.2.0",
    "oer-utils": "^1.3.2"
  }
}
