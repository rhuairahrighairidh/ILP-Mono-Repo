{
  "name": "ilp-packet",
  "version": "1.1.0",
  "description": "Module for parsing and serializing ILP packets",
  "main": "dist/index.js",
  "typings": "dist/index",
  "scripts": {
    "lint": "tslint \"src/**/*.ts\" \"test/*.spec.ts\"",
    "build": "rm -rf dist ; tsc",
    "test": "npm run build && npm run test:specs",
    "test:specs": "mocha",
    "precover": "rm -rf .nyc_output",
    "cover": "nyc --extension .ts --reporter=text-summary --reporter=html mocha",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/ilp-packet.git"
  },
  "keywords": [
    "ilp",
    "interledger",
    "packet",
    "binary",
    "serialization",
    "format",
    "convert"
  ],
  "author": "Interledger Team <info@interledger.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/interledgerjs/ilp-packet/issues"
  },
  "homepage": "https://github.com/interledgerjs/ilp-packet#readme",
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/long": "^3.0.31",
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.5",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "ts-node": "^2.1.0",
    "tslint": "^4.5.1",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "base64url": "^2.0.0",
    "base64url-adhoc": "^2.0.1",
    "bignumber.js": "^4.0.0",
    "lodash": "^4.17.4",
    "long": "^3.2.0",
    "oer-utils": "^1.3.0"
  }
}
