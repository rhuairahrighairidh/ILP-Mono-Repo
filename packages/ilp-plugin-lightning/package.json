{
  "name": "ilp-plugin-lightning",
  "version": "1.0.0-beta.11",
  "description": "Settle interledger payments using Lightning Network",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "publishConfig": {
    "tag": "latest"
  },
  "scripts": {
    "test": "nyc ava",
    "lint": "tslint --project .",
    "build": "tsc --project .",
    "buildWatch": "tsc --watch --project .",
    "testWatch": "jest --detectOpenHandles --watch",
    "copy": "cp src/utils/rpc.proto build/utils/rpc.proto"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/ilp-plugin-lightning.git"
  },
  "bugs": {
    "url": "https://github.com/interledgerjs/ilp-plugin-lightning/issues"
  },
  "keywords": [
    "interledger",
    "ilp",
    "streaming",
    "payments",
    "lightning",
    "lightning-network"
  ],
  "contributors": [
    "Kevin Davis <kevin@kava.io>",
    "Austin King <austin@stratalabs.io>"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "@types/debug": "0.0.30",
    "bignumber.js": "^7.2.1",
    "btp-packet": "^1.2.0",
    "cp": "^0.2.0",
    "debug": "^3.1.0",
    "eventemitter2": "^5.0.1",
    "grpc": "^1.14.2",
    "ilp-logger": "^1.0.2",
    "ilp-plugin-btp": "^1.3.3",
    "ilp-plugin-mini-accounts": "github:interledgerjs/ilp-plugin-mini-accounts#ko-ts-fixes",
    "ilp-store-memory": "^1.0.0",
    "is-base64": "0.0.6"
  },
  "devDependencies": {
    "@types/get-port": "^4.0.0",
    "@types/jest": "^23.3.1",
    "ava": "github:avajs/ava",
    "get-port": "^4.0.0",
    "ilp-protocol-stream": "github:interledgerjs/ilp-protocol-stream#ko-receive-only-tests",
    "jest": "^23.5.0",
    "nyc": "^13.0.1",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
