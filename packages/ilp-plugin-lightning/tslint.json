{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-console": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "allow-pascal-case",
      "check-format",
      "allow-leading-underscore"
    ],
    "max-line-length": {
      "options": [
        80
      ]
    }
  }
}
